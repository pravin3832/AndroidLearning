<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".DashBoard">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/my_text_view"
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/my_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_light"
            android:background="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Settings"
                android:textSize="14sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/button_nine_patch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="9-Patch"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/button_list_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="List View"
                android:textSize="16sp"
                android:layout_margin="4dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_with_drawable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="custom drawable"
                android:background="@drawable/drawable_blue_background"
                android:textColor="@android:color/holo_orange_dark"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/button_with_selector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Selector"
                android:background="@drawable/selector_button"
                android:textColor="@android:color/holo_orange_dark"
                android:padding="4dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/button_with_image_selector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Image bg"
                android:textColor="@android:color/white"
                android:background="@drawable/selector_image_button"
                android:padding="5dp"
                android:layout_margin="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_with_image_selector_no_text"
                android:layout_width="@dimen/orange_button_width"
                android:layout_height="@dimen/orange_button_height"
                android:text="O_o"
                android:textColor="@android:color/white"
                android:background="@drawable/selector_image_button"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/button_with_image_selector_no_text_1"
                android:layout_width="@dimen/orange_button_width"
                android:layout_height="@dimen/orange_button_height"
                android:text="O_o"
                android:textColor="@android:color/white"
                android:background="@drawable/ic_button_orange"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_fragment_activity_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Fragment Activity 1"
                android:textColor="@android:color/holo_red_dark"
                android:background="@android:drawable/btn_default"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/button_fragment_activity_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Fragment Activity 2"
                android:textColor="@android:color/holo_red_dark"
                android:background="@android:drawable/btn_default"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/button_fragment_activity_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="More Fragments"
                android:textColor="@android:color/holo_red_dark"
                android:background="@android:drawable/btn_default"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_frag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Fragment-A"
                android:textColor="@color/app_white"
                android:background="@drawable/drawable_bg_top_left_corner"
                android:drawableLeft="@drawable/ic_smile_emoticon"
                android:drawablePadding="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="16dp"/>

            <Button
                android:id="@+id/btn_frag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Fragment-B"
                android:textColor="@color/app_white"
                android:background="@drawable/drawable_bg_top_right_corner"
                android:drawableRight="@drawable/ic_smile_emoticon"
                android:drawablePadding="10dp"
                android:layout_toRightOf="@+id/btn_frag_1"
                android:layout_alignParentTop="true"
                android:padding="16dp"/>

            <Button
                android:id="@+id/btn_frag_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Fragment-C"
                android:textColor="@color/app_white"
                android:background="@drawable/drawable_bottom_left_corner"
                android:drawableTop="@drawable/ic_smile_emoticon"
                android:drawablePadding="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/btn_frag_1"
                android:padding="16dp"/>

            <Button
                android:id="@+id/btn_frag_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Fragment-D"
                android:textColor="@color/app_white"
                android:background="@drawable/drawable_bottom_right_corner"
                android:drawableBottom="@drawable/ic_smile_emoticon"
                android:drawablePadding="10dp"
                android:layout_below="@+id/btn_frag_2"
                android:layout_toRightOf="@+id/btn_frag_3"
                android:padding="16dp"/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
